<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JobDash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/app_theme_primary</item>
    </style>

    <style name="Theme.JobDash" parent="Base.Theme.JobDash" />

    <style name="heading" parent="Base.Theme.JobDash">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/app_theme_darker</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="register_header" parent="Base.Theme.JobDash">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/app_theme_darker</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="intro" parent="Base.Theme.JobDash">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headers" parent="Base.Theme.JobDash">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_theme_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cat_name" parent="Base.Theme.JobDash">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_theme_darkAlt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nav_item" parent="Base.Theme.JobDash">
        <item name="android:textColor">@color/app_theme_secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="name_header" parent="Base.Theme.JobDash">
        <item name="android:textColor">@color/app_theme_secondary</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="roundedImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="roundedImageView2" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
    </style>

    <style name="roundedServiceImage" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="serviceDetailTitle" paent="Base.Theme.JobDash">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/app_theme_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="serviceDetailProvider" paent="Base.Theme.JobDash">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>